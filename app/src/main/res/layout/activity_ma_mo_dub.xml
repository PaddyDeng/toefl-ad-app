<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative"
        style="@style/custome_title_bar_style">

        <ImageView
            style="@style/black_bg_title_back"/>

        <TextView
            android:id="@+id/dub_type_title"
            style="@style/title_tv_style"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <io.dcloud.H58E83894.weiget.overscroll.FastAndOverScrollScrollView
        android:layout_below="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dip"
                    android:background="@drawable/ic_make_back"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_marginLeft="@dimen/border_space_sec_max"
                        android:layout_marginTop="@dimen/border_space_thr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="千与千寻"
                        android:textSize="@dimen/text_size_ml"
                        android:textColor="@color/color_white"
                        />

                    <TextView
                        android:layout_marginLeft="@dimen/border_space_sec_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lesoon"
                        android:textSize="@dimen/text_size_ml"
                        android:textColor="@color/color_white"
                        />

                    <TextView
                        android:layout_marginTop="@dimen/border_space_sec_max"
                        android:layout_marginLeft="@dimen/border_space_sec_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="美音"
                        android:textColor="@color/color_white"
                        />


                    <TextView
                        android:layout_marginLeft="@dimen/border_space_sec_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共2020人播放视频"
                        android:textColor="@color/color_white"
                        />


                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="80dip"
                    android:layout_height="140dip"
                    android:layout_marginTop="@dimen/border_space_thr"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/border_space_sec_max"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_make_back"
                        android:scaleType="fitXY"
                        />

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全集共15期"
                android:layout_marginLeft="@dimen/border_space_sec_max"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/hot_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/border_space_sec"
                android:layout_marginTop="@dimen/border_space_sec"
                android:scrollbars="none"
                ></android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </io.dcloud.H58E83894.weiget.overscroll.FastAndOverScrollScrollView>

    <TextView
        android:id="@+id/add_dub_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加课程"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:padding="@dimen/border_space_sec_m"
        android:background="@color/color_text_green"
        android:layout_alignParentBottom="true"
        ></TextView>





</RelativeLayout>
