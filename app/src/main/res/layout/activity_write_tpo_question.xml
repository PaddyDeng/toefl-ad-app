<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grammar_bg"
    android:orientation="vertical">

    <RelativeLayout style="@style/new_custome_title_bar_style">

        <ImageView style="@style/black_bg_title_back" />

        <TextView
            android:id="@+id/write_tpo_title_tv"
            style="@style/new_title_tv_style"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/tpo_only_has_question_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border_space_sec_max"
            android:layout_marginRight="@dimen/border_space_sec_max"
            android:layout_marginTop="@dimen/border_space_thr"
            android:background="@drawable/white_bg_shape"
            android:orientation="vertical"
            android:padding="@dimen/border_space_sec_max"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_write_independent_practiec_detail"
                android:textColor="@color/color_sec_orange"
                android:textSize="@dimen/text_size_ml_plus" />

            <TextView
                android:id="@+id/write_tpo_question_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border_space_half"
                android:textColor="@color/color_txt_dark_black"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/write_tpo_start_practice_tv"
            style="@style/com_new_demand_style"
            android:layout_alignParentBottom="true"
            android:text="@string/str_write_independent_start" />

        <RelativeLayout
            android:id="@+id/show_has_listen_conainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/write_tpo_start_practice_tv"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/write_tpo_question_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/border_space_sec_max"
                android:background="@drawable/white_bg_shape"
                android:orientation="vertical"
                android:padding="@dimen/border_space_sec_max">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_write_independent_practiec_detail"
                    android:textColor="@color/color_sec_orange"
                    android:textSize="@dimen/text_size_ml_plus" />

                <TextView
                    android:id="@+id/write_tpo_question_des_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/border_space_half"
                    android:textColor="@color/color_txt_dark_black"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/write_tpo_listen_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/write_tpo_question_container"
                android:layout_marginLeft="@dimen/border_space_sec_max"
                android:layout_marginRight="@dimen/border_space_sec_max"
                android:background="@drawable/white_bg_shape"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/border_space_sec"
                        android:paddingRight="@dimen/border_space_sec"
                        android:paddingTop="@dimen/border_space"
                        android:text="@string/str_listen_original"
                        android:textColor="@color/color_sec_orange"
                        android:textSize="@dimen/text_size_ml_plus" />

                    <TextView
                        android:id="@+id/write_tpo_question_listen_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="@dimen/border_space_sec"
                        android:paddingRight="@dimen/border_space_sec_max"
                        android:paddingTop="@dimen/border_space"
                        android:text="@string/str_see_all_article"
                        android:textColor="@color/color_sec_orange"
                        android:textSize="@dimen/text_size_ms" />
                </RelativeLayout>

                <io.dcloud.H58E83894.weiget.PlayAudioView
                    android:id="@+id/play_audio_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/write_tpo_read_full_txt_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/write_tpo_listen_container"
                android:layout_marginBottom="@dimen/border_space_sec_max"
                android:layout_marginLeft="@dimen/border_space_sec_max"
                android:layout_marginRight="@dimen/border_space_sec_max"
                android:layout_marginTop="@dimen/border_space_sec_max_b"
                android:background="@drawable/white_bg_shape"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/border_space_sec"
                        android:paddingRight="@dimen/border_space_sec"
                        android:paddingTop="@dimen/border_space"
                        android:text="@string/str_read_full_text"
                        android:textColor="@color/color_sec_orange"
                        android:textSize="@dimen/text_size_ml_plus" />

                    <TextView
                        android:id="@+id/write_tpo_question_read_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="@dimen/border_space_sec"
                        android:paddingRight="@dimen/border_space_sec_max"
                        android:paddingTop="@dimen/border_space"
                        android:text="@string/str_see_all_article"
                        android:textColor="@color/color_sec_orange"
                        android:textSize="@dimen/text_size_ms" />

                </RelativeLayout>

                <io.dcloud.H58E83894.weiget.GeneralView
                    android:id="@+id/write_tpo_general_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/border_space_sec_max"
                    android:paddingLeft="@dimen/border_space_sec"
                    android:paddingRight="@dimen/border_space_sec_max" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
