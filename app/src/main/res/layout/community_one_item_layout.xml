<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingTop="@dimen/border_space">

    <ImageView
        android:id="@+id/community_big_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/community_one_item_pic_height"
        android:layout_marginTop="@dimen/border_space_thr"
        android:scaleType="fitXY"
        android:src="@drawable/icon_know_community"/>

    <io.dcloud.H58E83894.weiget.CircleImageView
        android:id="@+id/community_head_iv"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginLeft="@dimen/border_space_sec_max_m"
        android:src="@drawable/icon_default"/>

    <TextView
        android:id="@+id/community_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border_space_sec_m"
        android:layout_marginTop="@dimen/border_space"
        android:layout_toRightOf="@id/community_head_iv"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/community_big_pic"
        android:orientation="vertical"
        android:paddingBottom="@dimen/border_space"
        android:paddingLeft="@dimen/border_space_sec_max">

        <TextView
            android:id="@+id/community_one_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/border_space"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_ml"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/border_space_half">

            <TextView
                android:id="@+id/community_one_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/community_one_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/border_space_sec_max"
                android:drawableLeft="@drawable/icon_community_eye"
                android:drawablePadding="@dimen/border_space_half"
                android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>