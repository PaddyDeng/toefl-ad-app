<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/corret_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/border_space_sec_max_m">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/today_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_leidou_complete"
                android:textColor="@color/color_black"
                android:drawablePadding="@dimen/border_space"
                android:drawableLeft="@drawable/ic_speak_correting"/>

            <TextView
                android:id="@+id/today_speak_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sssss"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>



        <TextView
            android:id="@+id/today_speak_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/radius"
            android:text="sssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
            android:layout_marginTop="@dimen/border_space"
            />



</LinearLayout>