<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/frames"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/border_space_six_max_w"
        android:background="@drawable/ic_to_update"
       >

        <LinearLayout
            android:id="@+id/linear"
            android:layout_marginTop="110dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/update_tvs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主银...有新版本了，您更新么"
                android:textSize="@dimen/text_size_medium"
                android:padding="@dimen/border_space_m"
                android:textColor="@color/color_text_green"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/update_tvss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主银...有新版本了，您更新么"
                android:textSize="@dimen/text_size_micros"
                android:textColor="@color/color_lei_date"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/update_tv"
                android:layout_marginTop="@dimen/border_space_m"
                android:paddingLeft="@dimen/border_space_sec_max"
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:lineSpacingExtra="6dip"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/border_space_sec_max_m"
                android:layout_marginRight="@dimen/border_space_sec_max_m"

                />

        </LinearLayout>


        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@drawable/ic_uptate_03" />-->

        <ImageView
            android:id="@+id/dialog_simple_btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/border_space_sec_max"
            android:layout_marginTop="@dimen/border_space_thr"
            android:background="@drawable/ic_to_update_sure"
            android:paddingBottom="@dimen/border_space_normal"
            android:paddingLeft="@dimen/border_space_sec_max_m"
            android:paddingRight="@dimen/border_space_sec_max_m"
            android:paddingTop="@dimen/border_space_normal"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_medium"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/dialog_simple_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:padding="@dimen/border_space_sec_m"
        android:src="@drawable/ic_to_update_error"/>


</FrameLayout>