<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/border_space_sec_m"
            android:layout_marginTop="@dimen/border_space_half"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/konw_detail"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_txt_dark_black" />

            <ImageView
                android:layout_alignParentRight="true"
                style="@style/next_style"/>

        </RelativeLayout>

        <View
            android:layout_marginLeft="@dimen/border_space_sec_m"
            android:background="@color/color_text_green"
            style="@style/line"/>

    </LinearLayout>



</LinearLayout>