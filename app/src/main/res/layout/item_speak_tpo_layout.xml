<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <io.dcloud.H58E83894.weiget.VerticalScrollImageView
        android:id="@+id/vertical_scroll_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/border_space_sec_max"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/border_space_sec_max">

        <TextView
            android:id="@+id/speak_tpo_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_sec_orange"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/speak_tpo_item_des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/border_space_half"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_ml"/>
    </LinearLayout>
</RelativeLayout>