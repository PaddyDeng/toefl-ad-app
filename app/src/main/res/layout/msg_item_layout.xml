<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/border_space_sec"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/msg_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_sec_orange"
            android:textSize="@dimen/text_size_ms"/>

        <TextView
            android:id="@+id/msg_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_txt_gray"
            android:textSize="@dimen/text_size_micro_plus"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/border_space_thr"
        android:layout_height="match_parent">

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/praise_item_selector_default"/>

        <View
            android:layout_width="@dimen/border_space"
            android:layout_height="@dimen/border_space"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:background="@drawable/msg_circle_bg"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/msg_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/border_space_sec_m"
        android:layout_marginTop="@dimen/border_space_sec"
        android:background="@drawable/msg_content_bg"
        android:padding="@dimen/border_space_normal"/>
</LinearLayout>