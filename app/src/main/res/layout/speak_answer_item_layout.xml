<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <io.dcloud.H58E83894.weiget.CircleImageView
        android:id="@+id/speak_answer_item_head_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/border_space_sec_max"
        android:src="@drawable/icon_default"
        app:border_color="@color/color_white"
        app:border_width="2dip"/>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/speak_answer_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_txt_dark_black"
            android:textSize="@dimen/text_size_ms"/>

        <RelativeLayout
            android:id="@+id/play_audio_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/border_space_half"
            android:background="@drawable/speak_re_item_bg">

            <TextView
                android:id="@+id/speak_audio_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/border_space"
                android:padding="@dimen/base_half_padding"
                android:text="0''"
                android:textColor="@color/color_txt_gray"
                android:textSize="@dimen/text_size_micro_plus"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/border_space_sec_max"
                android:src="@drawable/icon_audio_thr"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/speak_item_praise_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/border_space_sec_max"
        android:drawablePadding="@dimen/border_space_half"
        android:drawableTop="@drawable/icon_praise_audio"
        android:textColor="@color/color_txt_dark_gray"/>
</LinearLayout>