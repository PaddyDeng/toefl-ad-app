<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/border_space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/border_space_sec_max"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/download_item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_ms" />

            <TextView
                android:id="@+id/up_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/base_half_padding"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="@dimen/border_space_normal"
                android:layout_marginLeft="@dimen/border_space_normal"
                android:textSize="@dimen/text_size_micro" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/post_up_person_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/border_space_normal"
                    android:layout_marginLeft="@dimen/border_space_normal"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_micro" />

                <TextView
                    android:id="@+id/see_person_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/border_space_normal"
                    android:layout_marginLeft="@dimen/border_space_sec_max"
                    android:drawablePadding="@dimen/base_half_padding"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_micro" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            style="@style/line"
            android:layout_marginLeft="@dimen/border_space"
            android:layout_marginRight="@dimen/border_space"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/down_status"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/border_space"
                    android:background="@color/color_text_green"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:paddingBottom="@dimen/border_space_normal"
                    android:paddingLeft="@dimen/border_space_sec_max"
                    android:paddingRight="@dimen/border_space_sec_max"
                    android:paddingTop="@dimen/border_space_normal"
                    android:text="下载"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/color_white"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/down_item_des"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="@dimen/text_size_micro"
                android:textColor="@color/color_text_green"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>