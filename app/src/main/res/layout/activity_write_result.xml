<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/icon_write_result"
              android:orientation="vertical">

    <RelativeLayout
        style="@style/new_custome_title_bar_style">

        <ImageView
            style="@style/black_bg_title_back"/>

        <TextView
            android:id="@+id/write_result_title_txt"
            style="@style/new_title_tv_style"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <io.dcloud.H58E83894.weiget.overscroll.FastAndOverScrollScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border_space_six_max"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <io.dcloud.H58E83894.weiget.RingView
                        android:layout_width="165dp"
                        android:layout_height="165dp"
                        android:layout_centerInParent="true"
                        app:ring_color="@color/color_sec_gray"
                        app:ring_width="2dip"/>

                    <io.dcloud.H58E83894.weiget.RingView
                        android:layout_width="146dp"
                        android:layout_height="146dp"
                        android:layout_centerInParent="true"
                        app:ring_color="@color/color_dark_gray"
                        app:ring_width="3dip"/>

                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/result_circle_shape">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/result_word_num_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/text_size_b_bl"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/border_space_half"
                                android:text="@string/str_word_num"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/text_size_small"/>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/result_use_time_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/border_space_sec_max"
                    android:textColor="@color/color_txt_dark_black"
                    android:textSize="@dimen/text_size_ml"/>

                <TextView
                    android:id="@+id/result_detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/border_space_sec_max_m"
                    android:background="@color/color_sec_gray"
                    android:paddingBottom="@dimen/border_space"
                    android:paddingLeft="@dimen/border_space_sec_max_m"
                    android:paddingRight="@dimen/border_space_sec_max_m"
                    android:paddingTop="@dimen/border_space"
                    android:text="@string/str_search_result_detail"
                    android:textSize="@dimen/text_size_ml"/>

                <TextView
                    android:id="@+id/simulation_again_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/border_space_sec_max_m"
                    android:background="@color/color_sec_gray"
                    android:paddingBottom="@dimen/border_space"
                    android:paddingLeft="@dimen/border_space_sec_max_m"
                    android:paddingRight="@dimen/border_space_sec_max_m"
                    android:paddingTop="@dimen/border_space"
                    android:text="@string/str_again_test"
                    android:textSize="@dimen/text_size_ml"/>


                <TextView
                    android:id="@+id/reservation_write_correction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/border_space_sec_max_m"
                    android:background="@color/color_sec_gray"
                    android:paddingBottom="@dimen/border_space"
                    android:paddingLeft="@dimen/border_space_sec_max_m"
                    android:paddingRight="@dimen/border_space_sec_max_m"
                    android:paddingTop="@dimen/border_space"
                    android:text="@string/str_reservation_write"
                    android:textSize="@dimen/text_size_ml"/>

            </LinearLayout>
        </RelativeLayout>
    </io.dcloud.H58E83894.weiget.overscroll.FastAndOverScrollScrollView>

</LinearLayout>
