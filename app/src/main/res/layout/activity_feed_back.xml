<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/custome_title_bar_style">

        <ImageView
            style="@style/black_bg_title_back"/>

        <TextView
            style="@style/title_tv_style"
            android:layout_centerInParent="true"
            android:text="@string/str_set_feed_back"/>

        <TextView
            android:id="@+id/feed_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/border_space"
            android:paddingLeft="@dimen/border_space"
            android:paddingRight="@dimen/border_space"
            android:text="@string/str_feed_commit"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_ml"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/feedBack_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_marginTop="@dimen/border_space_sec_max_m"
        android:background="@color/color_white"
        android:gravity="top|left"
        android:hint="@string/str_feed_hint_content"
        android:padding="@dimen/border_space"
        android:textColor="@color/color_black"
        android:textColorHint="@color/color_hint"
        android:textSize="@dimen/text_size_ml"/>


    <EditText
        android:id="@+id/feedBack_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/border_space_sec_max"
        android:background="@color/color_white"
        android:hint="@string/str_feed_hint_phone"
        android:inputType="phone"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingBottom="@dimen/border_space_sec_m"
        android:paddingLeft="@dimen/border_space"
        android:paddingTop="@dimen/border_space_sec_m"
        android:textColor="@color/color_black"
        android:textColorHint="@color/color_hint"
        android:textSize="@dimen/text_size_ml"/>

</LinearLayout>
