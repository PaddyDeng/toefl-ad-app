<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_grammar_bg"
              android:orientation="vertical">

    <RelativeLayout
        style="@style/new_custome_title_bar_style">

        <ImageView
            style="@style/black_bg_title_back"/>

        <TextView
            android:id="@+id/write_question_title_txt"
            style="@style/new_title_tv_style"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <io.dcloud.H58E83894.weiget.overscroll.FastAndOverScrollScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/grammer_des_tv"
                android:layout_marginLeft="@dimen/border_space_sec_max"
                android:layout_marginRight="@dimen/border_space_sec_max"
                android:layout_marginTop="@dimen/border_space_thr"
                android:background="@drawable/white_bg_shape"
                android:orientation="vertical"
                android:padding="@dimen/border_space_sec_max">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_write_independent_practiec_detail"
                    android:textColor="@color/color_sec_orange"
                    android:textSize="@dimen/text_size_ml_plus"/>

                <TextView
                    android:id="@+id/write_question_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/border_space_half"
                    android:textColor="@color/color_txt_dark_black"
                    android:textSize="@dimen/text_size_small"/>
            </LinearLayout>

            <TextView
                android:id="@+id/write_independent_start_practice_tv"
                style="@style/com_btn_style"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/border_space_sec_max"
                android:layout_marginLeft="@dimen/border_space_sec_max"
                android:layout_marginRight="@dimen/border_space_sec_max"
                android:text="@string/str_write_independent_start"/>

        </RelativeLayout>
    </io.dcloud.H58E83894.weiget.overscroll.FastAndOverScrollScrollView>

</LinearLayout>