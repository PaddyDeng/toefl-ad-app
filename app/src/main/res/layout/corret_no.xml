<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/frames"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/border_space_six_max_w"
        android:background="@drawable/ic_corret_back"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border_space_six_max_ss"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_corret_no"/>


            <TextView
                android:layout_marginTop="@dimen/detail_img_size"
                android:id="@+id/update_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="什么也没抢到，明天继续努力吧"
                android:textColor="@color/color_black"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/linear"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/update_tvss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用雷豆批改"
                android:background="@drawable/ic_corret_bt"
                android:layout_marginTop="@dimen/border_space_sec_max_b"
                android:textColor="@color/color_white"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/update_tvs"
                android:gravity="center" />

        </LinearLayout>







    </RelativeLayout>
        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@drawable/ic_uptate_03" />-->

    <ImageView
        android:id="@+id/dialog_simple_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:padding="@dimen/border_space_sec_m"
        android:src="@drawable/ic_to_update_error"/>


</FrameLayout>