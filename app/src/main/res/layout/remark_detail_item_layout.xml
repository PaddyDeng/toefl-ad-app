<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/selectableItemBackground"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/border_space_normal"
        android:paddingLeft="@dimen/border_space_sec_max"
        android:paddingRight="@dimen/border_space_sec_max"
        android:paddingTop="@dimen/border_space_normal">

        <io.dcloud.H58E83894.weiget.CircleImageView
            android:id="@+id/remark_detail_item_head_img"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/icon_default"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/border_space_sec_max"
            android:layout_toRightOf="@id/remark_detail_item_head_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/remark_detail_item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_ms"/>

            <TextView
                android:id="@+id/remark_detail_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_half_padding"
                android:textSize="@dimen/text_size_small"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>