<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_know_lei"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_white">



    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/mine_all_iv"
        android:layout_width="wrap_content"
        android:layout_height="150dip"
        android:scaleType="fitXY"
        app:riv_corner_radius="10dp"
        app:riv_mutate_background="true"
        android:src="@drawable/ic_make_back"
        app:riv_oval="false"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/mine_all_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="聊李艾"
        android:padding="@dimen/border_space_m"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mine_all_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.02.25"
            android:padding="@dimen/border_space_m"
            />
        <TextView
            android:id="@+id/mine_all_zan_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="256"
            android:padding="@dimen/border_space_m"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_sure_zan"
            android:drawablePadding="@dimen/border_space_m"
            />


    </RelativeLayout>

</LinearLayout>