<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/border_space_sec_max"
    android:paddingTop="@dimen/border_space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <io.dcloud.H58E83894.weiget.CircleImageView
            android:id="@+id/reply_header"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/ic_make_tou_03"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/border_space_sec_max"
            android:layout_toRightOf="@id/remark_head_img"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/remark_new_msg_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_ml"/>

            <TextView
                android:id="@+id/remark_new_msg_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_padding"
                android:textSize="@dimen/text_size_small"/>

        </LinearLayout>

        <TextView
            android:id="@+id/remark_reply_com_tv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/border_space"
            android:layout_marginRight="@dimen/border_space"
            android:layout_weight="1"
            android:background="@color/color_blue"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/border_space_half"
            android:textColor="@color/color_white"/>

    </LinearLayout>

    <View
        style="@style/com_line"
        android:layout_marginTop="@dimen/border_space"/>
</LinearLayout>