<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/new_custome_title_bar_style">

        <ImageView
            style="@style/black_bg_title_back"/>

        <TextView
            style="@style/new_title_tv_style"
            android:layout_centerInParent="true"
            android:text="@string/str_see_result_detail_title"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/topic_serial_num_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/question_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
