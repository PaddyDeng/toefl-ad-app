<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_lesson"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_white">

    <LinearLayout
        android:id="@+id/linear_my_lesson_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/border_space_sec_m"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ever_iv"
            android:layout_width="120dp"
            android:layout_height="80dip"
            android:src="@drawable/ic_make_back"
            android:scaleType="fitXY"
           />

        <LinearLayout
            android:layout_marginLeft="@dimen/border_space"
            android:layout_weight="3"
            android:layout_width="0dip"
            android:layout_height="80dip"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/eve_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="知识帝撒啊啊啊"
                    android:textSize="@dimen/text_size_ml"
                    android:layout_marginRight="23dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_black" />

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_next"
                    />

            </RelativeLayout>



            <RelativeLayout
                android:layout_marginTop="@dimen/border_space_sec_mm"
                android:layout_width="match_parent"
                android:layout_height="match_parent">




                <TextView
                    android:id="@+id/eve_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="已付款"/>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


    

    <View
        android:layout_marginLeft="@dimen/border_space_sec_m"
        style="@style/line"/>

</LinearLayout>