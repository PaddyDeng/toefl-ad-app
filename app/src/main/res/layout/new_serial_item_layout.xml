<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/new_serial_item_container"
        android:layout_width="@dimen/border_space_thr_max"
        android:layout_height="@dimen/border_space_thr_max"
        android:layout_margin="@dimen/border_space"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/new_serial_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/text_size_medium"/>
    </RelativeLayout>

</RelativeLayout>