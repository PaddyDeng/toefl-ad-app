<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/border_space_sec_max">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/today_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_leidou_complete"
                android:textColor="@color/color_text_green"
                android:drawablePadding="@dimen/border_space"
                android:drawableLeft="@drawable/ic_speak_correting"/>


        </RelativeLayout>

    <View
        style="@style/line"
        android:layout_marginTop="@dimen/border_space"
        android:layout_marginBottom="@dimen/border_space"
        />


        <TextView
            android:id="@+id/today_speak_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sssss"
            android:layout_marginBottom="@dimen/border_space_sec_m"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <io.dcloud.H58E83894.weiget.CircleImageView
            android:id="@+id/speak_answer_item_head_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/border_space_sec_max"
            android:layout_marginTop="@dimen/border_space_sec_max"
            android:layout_marginRight="@dimen/border_space_sec_max"
            android:layout_marginBottom="@dimen/border_space"
            android:src="@drawable/icon_default"
            app:border_color="@color/color_white"
            app:border_width="2dip"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/speak_answer_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小托君"
                android:textColor="@color/color_txt_dark_black"
                android:textSize="@dimen/text_size_ms"/>

            <TextView
                android:layout_marginTop="@dimen/border_space"
                android:id="@+id/speaks_answer_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看作文"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_text_green"
                android:textSize="@dimen/text_size_ms"/>


        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/border_space_m"
            android:id="@+id/speak_item_praise_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/border_space_sec_max"
            android:drawablePadding="@dimen/border_space_half"
            android:text="批改中"
            android:textColor="@color/color_txt_dark_gray"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="@dimen/border_space_sec_m"
        android:background="@color/color_sec_gray"
        android:padding="@dimen/border_space_sec"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="老师评语"
            android:layout_marginBottom="@dimen/border_space"
            />

        <io.dcloud.H58E83894.weiget.ExpandTextView
            android:id="@+id/txt_contents"
           android:textSize="12sp"
            android:layout_gravity="left"
            android:text="dadadasdasssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssdsdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="@dimen/border_space_sec_m"/>
    </LinearLayout>

</LinearLayout>