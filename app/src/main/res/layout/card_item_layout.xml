<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/card_height"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardMaxElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gmat_public_lesson_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            android:scaleType="centerCrop"/>

        <io.dcloud.H58E83894.weiget.RealtimeBlurView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:realtimeBlurRadius="@dimen/border_space_sec_max_m"
            app:realtimeOverlayColor="@android:color/transparent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="@dimen/border_space">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/border_space"
                    android:orientation="horizontal">

                    <io.dcloud.H58E83894.weiget.CircleImageView
                        android:id="@+id/public_lesson_head"
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:src="@drawable/icon_default"
                        app:border_color="@color/color_white"
                        app:border_width="1dip"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/border_space_normal">

                        <TextView
                            android:id="@+id/public_lesson_title"
                            style="@style/card_txt_color_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:ellipsize="end"
                            android:maxLines="2"/>

                        <TextView
                            android:id="@+id/immediately_sign_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/public_lesson_title"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/border_space_half"
                            android:background="@drawable/about_lesson_orange_bg"
                            android:paddingBottom="@dimen/base_half_padding"
                            android:paddingLeft="@dimen/border_space_sec_m"
                            android:paddingRight="@dimen/border_space_sec_m"
                            android:paddingTop="@dimen/base_half_padding"
                            android:text="立即报名"
                            android:textColor="@color/color_white"/>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/border_space">

                    <TextView
                        android:id="@+id/public_lesson_name"
                        style="@style/card_txt_color_style"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_micro"/>

                    <TextView
                        android:id="@+id/public_lesson_num"
                        style="@style/card_txt_color_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/text_size_micro"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>