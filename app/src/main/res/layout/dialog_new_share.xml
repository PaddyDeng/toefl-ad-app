<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/diss_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share_error"
        android:layout_alignParentRight="true"
        android:padding="@dimen/base_padding"
        android:layout_marginRight="@dimen/border_space_sec_max_m"
        />

    <RelativeLayout
        android:layout_marginTop="@dimen/border_space_th"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_share_backs"
        >

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ssdk_wechatmomentss"
            android:textColor="@color/color_text_green"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/border_space_thr"
            android:textSize="@dimen/text_size_bl"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/tv"
            android:layout_marginTop="@dimen/border_space_thr_max"
            >

            <LinearLayout
                android:id="@+id/line_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/qq_container"
                    style="@style/share_container">

                    <ImageView
                        style="@style/share_img"
                        android:src="@drawable/ic_qq" />

                    <TextView
                        style="@style/share_plat"
                        android:text="@string/ssdk_qq" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/qzone_container"
                    style="@style/share_container">

                    <ImageView
                        style="@style/share_img"
                        android:src="@drawable/ic_qq_zone" />

                    <TextView
                        style="@style/share_plat"
                        android:text="@string/ssdk_qzone" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/wechar_friends_container"
                    style="@style/share_container">

                    <ImageView
                        style="@style/share_img"
                        android:src="@drawable/ic_wx" />

                    <TextView
                        style="@style/share_plat"
                        android:text="@string/ssdk_wechat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wechart_circle_container"
                    style="@style/share_container">

                    <ImageView
                        style="@style/share_img"
                        android:src="@drawable/ic_wx_friends" />

                    <TextView
                        style="@style/share_plat"
                        android:text="@string/ssdk_wechatmoments" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/sina_weibo_container"
                        style="@style/share_container">

                        <ImageView
                            style="@style/share_img"
                            android:src="@drawable/ic_wb" />

                        <TextView
                            style="@style/share_plat"
                            android:text="@string/ssdk_sinaweibo" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/load_down_container"
                        style="@style/share_container">

                        <ImageView
                            style="@style/share_img"
                            android:src="@drawable/ic_down_01"
                            android:padding="@dimen/base_padding"/>

                        <TextView
                            style="@style/share_plat"
                            android:text="@string/ssdk_down" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>