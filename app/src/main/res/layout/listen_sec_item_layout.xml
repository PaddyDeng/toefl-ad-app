<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border_space_sec_max"
        android:layout_marginRight="@dimen/border_space_sec_max"
        android:background="@color/color_item_bg"
        android:padding="@dimen/border_space_sec">

        <TextView
            android:id="@+id/listen_sec_item_title"
            android:layout_marginRight="@dimen/border_space"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/listen_sec_item_down_status"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_txt_dark_black"
            android:textSize="@dimen/text_size_ml_plus"/>

        <TextView
            android:id="@+id/listen_sec_item_make_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listen_sec_item_title"
            android:textColor="@color/color_txt_dark_black"
            android:textSize="@dimen/text_size_micro_plus"/>


        <TextView
            android:id="@+id/listen_sec_item_down_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/str_download"
            android:textColor="@color/color_txt_dark_black"
            android:textSize="@dimen/text_size_ml_plus"/>

        <ImageView
            android:id="@+id/listen_sec_item_next_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_next"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>